" Enable syntax highlighting
syntax on

" Show line numbers
set number

" Enable mouse support
set mouse=a

" Allow backspace to work as expected
set backspace=indent,eol,start

" Highlight search matches as you type
set incsearch
set hlsearch

" Use spaces instead of tabs
set expandtab
set tabstop=4
set shiftwidth=4

" Enable auto-indenting
set smartindent

" Show matching brackets
set showmatch

" Use UTF-8 encoding
set encoding=utf-8

" Enable filetype-based plugins
filetype plugin on

